{% extends "layout.njk" %}

{% block content %}
<div class="hero-content text-center max-w-4xl">
    <div class="space-y-12">
        <!-- Hero Section -->
        <div class="space-y-6">
            <div class="flex justify-center">
                <div class="w-20 h-20 bg-gradient-to-r from-primary to-secondary rounded-2xl flex items-center justify-center text-white shadow-2xl shadow-primary/25">
                    <i class="fas fa-chart-line text-3xl"></i>
                </div>
            </div>
            <h1 class="text-6xl font-bold leading-tight">
                <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
                    Modern Logging
                </span>
                <br />
                <span class="text-base-content">Dashboard</span>
            </h1>
            <p class="text-xl text-base-content/70 max-w-2xl mx-auto leading-relaxed">
                Streamline your application monitoring with real-time logs, 
                powerful filtering, and beautiful analytics. Built for modern development teams.
            </p>
        </div>

        <!-- Feature Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="card bg-base-100/80 shadow-xl hover:shadow-2xl transition-all duration-300 border border-base-300">
                <div class="card-body items-center text-center space-y-4">
                    <div class="w-12 h-12 bg-gradient-to-r from-green-400 to-blue-500 rounded-xl flex items-center justify-center text-white">
                        <i class="fas fa-shield-alt text-xl"></i>
                    </div>
                    <h2 class="card-title text-lg">Secure & Private</h2>
                    <p class="text-sm text-base-content/70">
                        GitHub OAuth integration ensures your data stays protected with enterprise-grade security.
                    </p>
                </div>
            </div>
            
            <div class="card bg-base-100/80 shadow-xl hover:shadow-2xl transition-all duration-300 border border-base-300">
                <div class="card-body items-center text-center space-y-4">
                    <div class="w-12 h-12 bg-gradient-to-r from-purple-400 to-pink-500 rounded-xl flex items-center justify-center text-white">
                        <i class="fas fa-palette text-xl"></i>
                    </div>
                    <h2 class="card-title text-lg">Beautiful Themes</h2>
                    <p class="text-sm text-base-content/70">
                        Choose from multiple stunning themes that adapt to your workflow and preferences.
                    </p>
                </div>
            </div>
            
            <div class="card bg-base-100/80 shadow-xl hover:shadow-2xl transition-all duration-300 border border-base-300">
                <div class="card-body items-center text-center space-y-4">
                    <div class="w-12 h-12 bg-gradient-to-r from-orange-400 to-red-500 rounded-xl flex items-center justify-center text-white">
                        <i class="fas fa-search-plus text-xl"></i>
                    </div>
                    <h2 class="card-title text-lg">Smart Filtering</h2>
                    <p class="text-sm text-base-content/70">
                        Advanced search and filtering capabilities help you find exactly what you need, fast.
                    </p>
                </div>
            </div>
        </div>

        <!-- Stats Section -->
        <div class="stats shadow-xl bg-base-100/80 border border-base-300">
            <div class="stat">
                <div class="stat-figure text-primary">
                    <i class="fas fa-bolt text-2xl"></i>
                </div>
                <div class="stat-title">Real-time</div>
                <div class="stat-value text-primary">Instant</div>
                <div class="stat-desc">Log processing & updates</div>
            </div>
            
            <div class="stat">
                <div class="stat-figure text-secondary">
                    <i class="fas fa-filter text-2xl"></i>
                </div>
                <div class="stat-title">Filtering</div>
                <div class="stat-value text-secondary">Smart</div>
                <div class="stat-desc">Advanced query system</div>
            </div>
            
            <div class="stat">
                <div class="stat-figure text-accent">
                    <i class="fas fa-mobile-alt text-2xl"></i>
                </div>
                <div class="stat-title">Experience</div>
                <div class="stat-value text-accent">Mobile</div>
                <div class="stat-desc">Responsive design</div>
            </div>
        </div>

        <!-- CTA Section -->
        {% if not user %}
        <div class="space-y-6">
            <div class="bg-gradient-to-r from-primary/10 to-secondary/10 rounded-2xl p-8 border border-primary/20">
                <h3 class="text-2xl font-bold mb-4">Ready to get started?</h3>
                <p class="text-base-content/70 mb-6">
                    Connect your GitHub account and start monitoring your applications in seconds.
                </p>
                <a href="/auth/github" class="btn btn-primary btn-lg gap-3 shadow-lg hover:shadow-xl transition-all">
                    <i class="fab fa-github text-xl"></i>
                    Sign in with GitHub
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}