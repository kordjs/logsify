{% extends "layout.njk" %}

{% block content %}
<div class="hero-content text-center">
    <div class="max-w-md space-y-6">
        <div class="w-24 h-24 bg-gradient-to-r from-red-400 to-pink-500 rounded-full flex items-center justify-center text-white mx-auto">
            <i class="fas fa-exclamation-triangle text-4xl"></i>
        </div>
        
        <div>
            <h1 class="text-5xl font-bold text-error mb-4">Error</h1>
            <p class="text-xl text-base-content/70 mb-6">{{ message or 'Something went wrong!' }}</p>
        </div>
        
        <div class="flex gap-4 justify-center">
            <button onclick="history.back()" class="btn btn-ghost gap-2">
                <i class="fas fa-arrow-left"></i>
                Go Back
            </button>
            <a href="{{ '/' if not user else '/dashboard' }}" class="btn btn-primary gap-2">
                <i class="fas fa-home"></i>
                Home
            </a>
        </div>
    </div>
</div>
{% endblock %}