<!DOCTYPE html>
<html lang="en" id="html-root">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or 'Logsify' }}</title>
    <link href="/css/styles.css" rel="stylesheet">
    <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    
    <!-- Theme Script - Must be inline and early -->
    <script>
        // Immediate theme application to prevent flash
        (function() {
            const savedTheme = localStorage.getItem('logsify-theme') || 'dark';
            document.documentElement.setAttribute('data-theme', savedTheme);
            document.documentElement.className = 'theme-' + savedTheme;
        })();
    </script>
</head>
<body class="min-h-screen bg-gradient-to-br from-base-100 to-base-200" x-data="appData()">
    {% if user %}
        <!-- Modern Navigation Bar -->
        <nav class="backdrop-blur-md bg-base-100/80 border-b border-base-300/50 sticky top-0 z-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between h-16">
                    <!-- Logo Section -->
                    <div class="flex items-center space-x-4">
                        <div class="flex items-center space-x-2">
                            <div class="w-8 h-8 bg-gradient-to-br from-primary to-secondary rounded-lg flex items-center justify-center">
                                <span class="text-white font-bold text-sm">L</span>
                            </div>
                            <h1 class="text-xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
                                Logsify
                            </h1>
                        </div>
                        <div class="hidden md:flex items-center space-x-1">
                            <a href="/dashboard/logs" 
                               class="px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 
                                      {% if currentPath and currentPath.startswith('/dashboard/logs') %}
                                      bg-primary/10 text-primary border border-primary/20
                                      {% else %}
                                      text-base-content/70 hover:text-base-content hover:bg-base-200
                                      {% endif %}">
                                <span class="flex items-center space-x-2">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                    </svg>
                                    <span>Logs</span>
                                </span>
                            </a>
                            <a href="/dashboard/settings"
                               class="px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200
                                      {% if currentPath and currentPath.startswith('/dashboard/settings') %}
                                      bg-primary/10 text-primary border border-primary/20
                                      {% else %}
                                      text-base-content/70 hover:text-base-content hover:bg-base-200
                                      {% endif %}">
                                <span class="flex items-center space-x-2">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    <span>Settings</span>
                                </span>
                            </a>
                        </div>
                    </div>
                    
                    <!-- Right Section -->
                    <div class="flex items-center space-x-4">
                        <!-- Theme Switcher -->
                        <div class="relative" x-data="{ open: false }">
                            <button @click="open = !open" 
                                    class="p-2 rounded-lg bg-base-200 hover:bg-base-300 transition-colors duration-200 border border-base-300/50">
                                <svg class="w-5 h-5 text-base-content" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
                                </svg>
                            </button>
                            
                            <div x-show="open" 
                                 @click.away="open = false"
                                 x-transition:enter="transition ease-out duration-100"
                                 x-transition:enter-start="transform opacity-0 scale-95"
                                 x-transition:enter-end="transform opacity-100 scale-100"
                                 x-transition:leave="transition ease-in duration-75"
                                 x-transition:leave-start="transform opacity-100 scale-100"
                                 x-transition:leave-end="transform opacity-0 scale-95"
                                 class="absolute right-0 mt-2 w-56 bg-base-100 rounded-xl shadow-xl border border-base-300/50 backdrop-blur-lg z-50">
                                <div class="p-2">
                                    <div class="text-xs font-semibold text-base-content/70 px-3 py-2 uppercase tracking-wide">Choose Theme</div>
                                    <div class="grid grid-cols-2 gap-1">
                                        <button @click="changeTheme('light')" class="theme-option light">
                                            <span class="emoji">‚òÄÔ∏è</span> Light
                                        </button>
                                        <button @click="changeTheme('dark')" class="theme-option dark">
                                            <span class="emoji">üåô</span> Dark
                                        </button>
                                        <button @click="changeTheme('cupcake')" class="theme-option cupcake">
                                            <span class="emoji">üßÅ</span> Cupcake
                                        </button>
                                        <button @click="changeTheme('synthwave')" class="theme-option synthwave">
                                            <span class="emoji">üåà</span> Synthwave
                                        </button>
                                        <button @click="changeTheme('retro')" class="theme-option retro">
                                            <span class="emoji">üìª</span> Retro
                                        </button>
                                        <button @click="changeTheme('cyberpunk')" class="theme-option cyberpunk">
                                            <span class="emoji">ü§ñ</span> Cyberpunk
                                        </button>
                                        <button @click="changeTheme('valentine')" class="theme-option valentine">
                                            <span class="emoji">üíù</span> Valentine
                                        </button>
                                        <button @click="changeTheme('aqua')" class="theme-option aqua">
                                            <span class="emoji">üåä</span> Aqua
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- User Menu -->
                        <div class="relative" x-data="{ userOpen: false }">
                            <button @click="userOpen = !userOpen" 
                                    class="flex items-center space-x-3 p-2 rounded-lg hover:bg-base-200 transition-colors duration-200">
                                <img src="{{ user.avatar or '/images/default-avatar.png' }}" 
                                     alt="Avatar" 
                                     class="w-8 h-8 rounded-full ring-2 ring-primary/20" />
                                <span class="hidden md:block text-sm font-medium text-base-content">{{ user.name }}</span>
                                <svg class="w-4 h-4 text-base-content/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </button>
                            
                            <div x-show="userOpen" 
                                 @click.away="userOpen = false"
                                 x-transition:enter="transition ease-out duration-100"
                                 x-transition:enter-start="transform opacity-0 scale-95"
                                 x-transition:enter-end="transform opacity-100 scale-100"
                                 x-transition:leave="transition ease-in duration-75"
                                 x-transition:leave-start="transform opacity-100 scale-100"
                                 x-transition:leave-end="transform opacity-0 scale-95"
                                 class="absolute right-0 mt-2 w-48 bg-base-100 rounded-xl shadow-xl border border-base-300/50 backdrop-blur-lg z-50">
                                <div class="p-2">
                                    <div class="px-3 py-2 text-sm text-base-content/70 border-b border-base-300/50">
                                        {{ user.name }}
                                    </div>
                                    <a href="/dashboard/settings" class="flex items-center px-3 py-2 text-sm text-base-content hover:bg-base-200 rounded-lg transition-colors">
                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        </svg>
                                        Settings
                                    </a>
                                    <form method="POST" action="/auth/logout">
                                        <button type="submit" class="w-full flex items-center px-3 py-2 text-sm text-red-600 hover:bg-red-50 rounded-lg transition-colors">
                                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                                            </svg>
                                            Logout
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    {% endif %}

    <!-- Main Content -->
    <main class="{% if not user %}flex items-center justify-center min-h-screen{% else %}max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8{% endif %}">
        {% block content %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class="bg-base-200/50 border-t border-base-300/50 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <div class="text-center text-sm text-base-content/70">
                ¬© 2024 Logsify - Modern Logging Dashboard
            </div>
        </div>
    </footer>

    <!-- Alpine.js Data -->
    <script>
        function appData() {
            return {
                currentTheme: localStorage.getItem('logsify-theme') || 'dark',
                
                changeTheme(theme) {
                    this.currentTheme = theme;
                    document.documentElement.setAttribute('data-theme', theme);
                    document.documentElement.className = 'theme-' + theme;
                    localStorage.setItem('logsify-theme', theme);
                    
                    // Visual feedback
                    this.$dispatch('theme-changed', { theme });
                    
                    // Force re-render to update styles
                    setTimeout(() => {
                        document.body.classList.add('theme-transition');
                        setTimeout(() => document.body.classList.remove('theme-transition'), 300);
                    }, 10);
                }
            }
        }

        // Auto-refresh logs every 30 seconds on logs page
        if (window.location.pathname.includes('/dashboard/logs') || window.location.pathname.includes('/test-dashboard')) {
            setInterval(() => {
                const autoRefresh = document.getElementById('auto-refresh');
                if (autoRefresh && autoRefresh.checked) {
                    window.location.reload();
                }
            }, 30000);
        }
    </script>
</body>
</html>