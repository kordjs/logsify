{% extends "layout.njk" %}

{% block content %}
<div class="hero-content text-center">
    <div class="max-w-md space-y-6">
        <div class="w-24 h-24 bg-gradient-to-r from-purple-400 to-indigo-500 rounded-full flex items-center justify-center text-white mx-auto">
            <i class="fas fa-search text-4xl"></i>
        </div>
        
        <div>
            <h1 class="text-6xl font-bold mb-4">404</h1>
            <h2 class="text-2xl font-semibold mb-4">Page Not Found</h2>
            <p class="text-base-content/70 mb-6">
                The page you're looking for doesn't exist or has been moved.
            </p>
        </div>
        
        <div class="flex gap-4 justify-center">
            <button onclick="history.back()" class="btn btn-ghost gap-2">
                <i class="fas fa-arrow-left"></i>
                Go Back
            </button>
            <a href="{{ '/' if not user else '/dashboard' }}" class="btn btn-primary gap-2">
                <i class="fas fa-home"></i>
                Home
            </a>
        </div>
    </div>
</div>
{% endblock %}